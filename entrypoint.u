?add : (int,int)->(int)						// predeclaration of pure function

entrypoint : ~()->(iErrorCode:~int(1))		// define entry-point, initialize iErrorCode with 1
{
	iErrorCode = add(-1, 5+-4/*+2*/);		// assign the result of -1+5-4/*+2*/ to iErrorCode
}

add : (i1:int, i2:int)->(:int(i1+i2)) 		// definition of predeclared pure function